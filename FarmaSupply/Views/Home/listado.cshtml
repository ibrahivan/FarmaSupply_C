@model FarmaSupply.DTO.UsuarioDTO
@{
    ViewData["Title"] = "listado";
    var noSePuedeEliminar = ViewData["noSePuedeEliminar"] as string;
   
    var eliminacionCorrecta = ViewData["eliminacionCorrecta"] as string;
    var EdicionCorrecta = ViewData["EdicionCorrecta"] as string;
    var mensajeRegistroExitoso = ViewData["MensajeRegistroExitoso"] as string;
    var cuentaNoVerificada = ViewData["EmailNoConfirmado"] as string;
    var noTePuedesEliminar = ViewData["noTePuedesEliminar"] as string;
    var usuarioNoEncontrado = ViewData["usuarioNoEncontrado"] as string;
    var error = ViewData["error"] as string;
}

<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Listado</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@9/swiper-bundle.min.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-KK94CHFLLe+nY2dmCWGMq91rCGa5gtU4mk92HdvYe+M/SXH301p5ILy+dN9+nJOZ" crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/style.css" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Jost&family=Roboto:wght@400;700&display=swap" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script type="module" src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.esm.js"></script>
    <script nomodule src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.js"></script>
    <script src="~/script/script1.js" asp-append-version="true"></script>
    <script src="~/script/modernizr.js" asp-append-version="true"></script>
</head>

<body>
    <section id="navigation-bar" class="navigation position-fixed">
        <nav id="navbar-example2" class="navbar navbar-expand-lg ">
            <div class="navigation container-fluid d-flex flex-wrap align-items-center my-2 pe-4 ps-5 ">
                <div class="col-md-3 brand-logo">
                    <a asp-page="/" class="d-inline-flex link-body-emphasis text-decoration-none">
                        <h2>FarmaSupply</h2>
                    </a>
                </div>
                <div class="offcanvas-body ">
                    <ul class="navbar-nav  flex-grow-1">
                        <li>
                            <form asp-page="/auth/logout" method="post" id="logoutForm">
                                <button type="button" class="btn btn-dark mt-2"
                                    onclick="confirmarLogout()">Logout</button>
                            </form>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </section>

    <div class="container py-4 mt-5">
        <div class="card bg-light">
            <div class="card-header">
                <h3>Listado usuarios</h3>
            </div>
            <div class="card-body">
                <h5 class="card-title text-center text-danger" asp-if="usuarios == null || usuarios.Count == 0">No hay usuarios registrados</h5>
                <h4 class="card-title">
                    <a asp-page="/auth/registrar" class="btn btn-dark" asp-if="usuarios != null && usuarios.Count > 0">Crear usuario</a>
                </h4>
                <table class="table table-striped table-bordered" asp-if="usuarios != null && usuarios.Count > 0">
                    <thead class="thead-inverse">
                        <tr>
                            <th class="table-dark" asp-if=User.IsInRole("ROLE_USER")>id</th>
                            <th class="table-dark">Nombre</th>
                            <th class="table-dark">Apellidos</th>
                            <th class="table-dark">Email</th>
                            <th class="table-dark">Teléfono</th>
                            <th class="table-dark" asp-if=User.IsInRole("ROLE_ADMIN")>Editar</th>
                            <th class="table-dark" asp-if=User.IsInRole("ROLE_ADMIN")>Eliminar</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var usuario in ViewBag.Usuarios)
                        {
                            <tr>
                                <td asp-if=User.IsInRole("ROLE_USER")>
                                    <a class="btn btn-dark" asp-page="/privada/ver" asp-route-id="@usuario.Id">@usuario.Id</a>
                                </td>
                                <td>@usuario.NombreUsuario</td>
                                <td>@usuario.ApellidosUsuario</td>
                                <td>@usuario.EmailUsuario</td>
                                <td>@usuario.TlfUsuario</td>
                                <td asp-if=User.IsInRole("ROLE_ADMIN")>
                                    <a class="btn btn-primary" asp-action="MostrarFormularioEdicion" asp-controller="Administracion" asp-route-id="@usuario.Id">Editar</a>
                                </td>
                                <td asp-if=User.IsInRole("ROLE_ADMIN")>
                                    <a class="btn btn-danger" data-id="@usuario.Id" onclick="confirmarEliminar(event)">Eliminar</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    @if (!string.IsNullOrEmpty(usuarioNoEncontrado))
    {
        <script>
            mostrarNotificacion("¡No se encontró al usuario!", "No hay ningún usuario registrado con el email introducido", 'info');
        </script>
    }
    @if (!string.IsNullOrEmpty(mensajeRegistroExitoso))
    {
        <script>
            mostrarNotificacion("¡El usuario fue registrado!", "Para usar la cuenta tiene que confirmar su cuenta de correo electrónico.", 'info');
        </script>
    }
    @if (!string.IsNullOrEmpty(noSePuedeEliminar))
    {
        <script>
            mostrarNotificacion("¡Error!", "No se puede eliminar al ultimo usuario con permisos de administrador", 'error');
        </script>
    }
  
    @if (!string.IsNullOrEmpty(eliminacionCorrecta))
    {
        <script>
            mostrarNotificacion("¡Usuario eliminado!", "El usuario ha sido eliminado correctamente", 'success');
        </script>
    }
    @if (!string.IsNullOrEmpty(cuentaNoVerificada))
    {
        <script>
            mostrarNotificacion("¡Email registrado pero sin verificar!", "Para que pueda usar la cuenta, antes debe confirmar su cuenta de correo electrónico", 'error');
        </script>
    }
    @if (!string.IsNullOrEmpty(EdicionCorrecta))
    {
        <script>
            mostrarNotificacion("¡Cambios guardados!", "El usuario ha sido modificado", 'info');
        </script>
    }
    @if (!string.IsNullOrEmpty(noTePuedesEliminar))
    {
        <script>
            mostrarNotificacion("¡No puede eliminarse a sí mismo!", "Debe ser otro administrador quien realice esta acción", 'info');
        </script>
    }
    @if (!string.IsNullOrEmpty(error))
    {
        <script>
            mostrarNotificacion("¡Error!", "Ocurrio un error no esperado, intentelo de nuevo", 'error');
        </script>
    }

    <script src="~/script/jquery-1.11.0.min.js"></script>
    <script src="~/script/plugins.js"></script>
    <script src="~/script/script.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/swiper@9/swiper-bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/iconify-icon@1.0.7/dist/iconify-icon.min.js"></script>
</body>

</html>
