@model FarmaSupply.DTO.UsuarioDTO

@{
    ViewData["Title"] = "Editar usuario";
}


    <section id="hero">
        <div class="hero container py-5 my-5">
            <div class="row flex-lg-row-reverse align-items-center g-5 mt-2 py-5">
                <div class="col-10 col-sm-8 col-lg-6 py-md-5 my-md-5">
                    <img src="~/css/assets/scooter.png" class="d-block mx-lg-auto img-fluid" alt="Bootstrap Themes"
                        width="700" height="500" loading="lazy">
                </div>
                <div class="col-lg-6 py-md-5 my-md-5">
                    <form class="custom-form cardPrincipal" method="post" enctype="multipart/form-data"
                        asp-action="ProcesarEditar" asp-controller="Privada">
                        <h2 class="text-center mb-5">
                            <i class="bi bi-person-fill-gear" style="color: #1f3c85">Editar usuario</i>
                        </h2>
                        <input type="hidden" asp-for="Id" />

                        <div>
                           @*  <img alt="Image" class="profile-image" width="200px" asp-if="Model.Foto != null"
                                src="data:image/png;base64, @Convert.ToBase64String(Model.Foto)" /> *@
                            <img alt="Default Image" width="200px" class="profile-image" src="~/css/assets/default.png"
                                asp-unless="Model.Foto != null" />
                        </div>
                        <div class="mb-3">
                            <label for="email" class="form-label textoPrincipal">Correo Electrónico</label>
                            <input asp-for="EmailUsuario" type="email" id="email" name="email" class="form-control"
                                readonly disabled />
                        </div>
                        <div class="mb-3">
                            <label for="nombre" class="form-label textoPrincipal">Nombre</label>
                            <input asp-for="NombreUsuario" type="text" id="nombre" name="nombre"
                                class="form-control" required />
                        </div>
                        <div class="mb-3">
                            <label for="apellidos" class="form-label textoPrincipal">Apellidos</label>
                            <input asp-for="ApellidosUsuario" type="text" id="apellidos" name="apellidos"
                                class="form-control" required />
                        </div>
                        <div class="mb-3">
                            <label for="telefono" class="form-label textoPrincipal">Teléfono</label>
                            <input asp-for="TlfUsuario" type="tel" id="telefono" name="telefono"
                                class="form-control" required />
                        </div>
                        <div class="mb-3">
                            <label for="rol" class="form-label textoPrincipal">Rol del usuario</label>
                            <select asp-for="Rol" id="rol" name="rol" class="form-select" required>
                                <option value="ROLE_USER">Usuario</option>
                                <option value="ROLE_ADMIN">Administrador</option>
                            </select>
                        </div>
                        <div class="mb-3">
                            <label for="foto" class="form-label textoPrincipal">Foto de Perfil</label>
                            <input class="form-control" type="file" id="foto" name="file" accept="image/*" />
                        </div>
                        <button type="submit" class="btn btn-primary mt-5">
                            <i class="bi bi-person-fill-gear fs-5"> Guardar cambios</i>
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </section>
